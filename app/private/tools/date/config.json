{
  "tool_name": "date",
  "display_name": "Date Calculator",
  "description": "Calcul de dates relatives avec logique intelligente pour jours, semaines et weekdays",
  "required_params": [],
  "optional_params": {
    "default_format": "%d/%m/%Y",
    "timezone": "Europe/Paris",
    "locale": "fr_FR"
  },
  "actions": {
    "calculate_date": {
      "description": "Calcule une date relative à aujourd'hui avec descriptions intelligentes",
      "parameters": {
        "days": "Nombre de jours à ajouter/soustraire (défaut: 0)",
        "weeks": "Nombre de semaines à ajouter/soustraire (défaut: 0)",
        "weekday": "Jour de la semaine cible (0=lundi, 6=dimanche) - priorité moindre que days/weeks",
        "format": "Format de date désiré (défaut: %d/%m/%Y)"
      },
      "examples": {
        "today": {
          "action": "calculate_date",
          "params": {},
          "result": "Date d'aujourd'hui"
        },
        "tomorrow": {
          "action": "calculate_date", 
          "params": {"days": 1},
          "result": "Demain avec description 'tomorrow'"
        },
        "next_week": {
          "action": "calculate_date",
          "params": {"weeks": 1},
          "result": "Dans une semaine"
        },
        "next_monday": {
          "action": "calculate_date",
          "params": {"weekday": 0},
          "result": "Prochain lundi"
        },
        "custom_format": {
          "action": "calculate_date",
          "params": {"days": 7, "format": "%Y-%m-%d"},
          "result": "Dans 7 jours au format ISO"
        },
        "complex": {
          "action": "calculate_date",
          "params": {"days": 3, "weeks": 2},
          "result": "Dans 2 semaines et 3 jours"
        }
      },
      "special_cases": {
        "yesterday": "days: -1",
        "day_after_tomorrow": "days: 2", 
        "last_week": "weeks: -1",
        "priority": "days/weeks ont priorité sur weekday"
      }
    }
  },
  "profile_examples": {
    "DEFAULT": {
      "default_format": "%d/%m/%Y",
      "timezone": "Europe/Paris",
      "locale": "fr_FR"
    },
    "US": {
      "default_format": "%m/%d/%Y",
      "timezone": "America/New_York",
      "locale": "en_US"
    },
    "ISO": {
      "default_format": "%Y-%m-%d",
      "timezone": "UTC",
      "locale": "en_US"
    }
  },
  "format_examples": {
    "%d/%m/%Y": "31/12/2024 (jour/mois/année)",
    "%m/%d/%Y": "12/31/2024 (mois/jour/année US)",
    "%Y-%m-%d": "2024-12-31 (format ISO)",
    "%A %d %B %Y": "Mardi 31 Décembre 2024 (nom complet)",
    "%d %b %Y": "31 Déc 2024 (abrégé)"
  }
}