{
  "tool_name": "calendar",
  "display_name": "Google Calendar",
  "description": "Gestion des événements Google Calendar avec intégration complète Google API",
  "required_params": ["token_file", "credentials_file"],
  "optional_params": {
    "calendar_id": "primary",
    "timezone": "Europe/Paris",
    "scopes_read_only": true,
    "timeout": 30
  },
  "actions": {
    "list_events": {
      "description": "Liste les événements à venir du calendrier",
      "parameters": {
        "count": "Nombre d'événements (1-100, défaut: 10)",
        "calendar_id": "ID du calendrier (optionnel, utilise la config par défaut)"
      },
      "example": {
        "action": "list_events",
        "params": {"count": 5, "calendar_id": "primary"}
      }
    },
    "create_event": {
      "description": "Crée un nouvel événement dans le calendrier",
      "parameters": {
        "summary": "Titre de l'événement (requis)",
        "start_time": "Date/heure de début au format ISO (requis): 2024-07-01T10:00:00",
        "end_time": "Date/heure de fin au format ISO (requis): 2024-07-01T11:00:00",
        "description": "Description de l'événement (optionnel)",
        "location": "Lieu de l'événement (optionnel)",
        "attendees": "Liste d'emails des participants (optionnel): [\"user1@example.com\"]",
        "calendar_id": "ID du calendrier (optionnel)"
      },
      "example": {
        "action": "create_event",
        "params": {
          "summary": "Réunion équipe",
          "start_time": "2024-07-01T14:00:00",
          "end_time": "2024-07-01T15:00:00",
          "description": "Point hebdomadaire équipe dev",
          "location": "Salle de conf A",
          "attendees": ["dev1@company.com", "dev2@company.com"]
        }
      }
    },
    "update_event": {
      "description": "Met à jour un événement existant",
      "parameters": {
        "event_id": "ID de l'événement à modifier (requis)",
        "summary": "Nouveau titre (optionnel)",
        "start_time": "Nouvelle date/heure de début (optionnel)",
        "end_time": "Nouvelle date/heure de fin (optionnel)",
        "description": "Nouvelle description (optionnel)",
        "location": "Nouveau lieu (optionnel)",
        "attendees": "Nouvelle liste de participants (optionnel)",
        "calendar_id": "ID du calendrier (optionnel)"
      },
      "example": {
        "action": "update_event",
        "params": {
          "event_id": "event_abc123",
          "summary": "Réunion équipe - URGENT",
          "location": "Visioconférence"
        }
      }
    },
    "delete_event": {
      "description": "Supprime un événement du calendrier",
      "parameters": {
        "event_id": "ID de l'événement à supprimer (requis)",
        "calendar_id": "ID du calendrier (optionnel)"
      },
      "example": {
        "action": "delete_event",
        "params": {"event_id": "event_abc123"}
      }
    }
  },
  "profile_examples": {
    "WORK": {
      "token_file": "path/to/work-token.json",
      "credentials_file": "path/to/work-credentials.json",
      "calendar_id": "work@company.com",
      "timezone": "UTC"
    },
    "PERSONAL": {
      "token_file": "path/to/personal-token.json", 
      "credentials_file": "path/to/personal-credentials.json",
      "calendar_id": "personal@gmail.com",
      "timezone": "Europe/Paris"
    }
  },
  "oauth_config": {
    "provider": "google",
    "scopes": [
      "https://www.googleapis.com/auth/calendar",
      "https://www.googleapis.com/auth/calendar.readonly"
    ]
  },
  "setup_instructions": {
    "1": "Créer un projet Google Cloud Platform",
    "2": "Activer l'API Google Calendar",
    "3": "Créer des credentials OAuth 2.0 type 'Web application'",
    "4": "Ajouter redirect URI: http://localhost:8000/oauth/calendar/callback",
    "5": "Télécharger le fichier credentials.json",
    "6": "Placer credentials.json dans le chemin spécifié",
    "7": "Authentification via /oauth/calendar/auth"
  }
}